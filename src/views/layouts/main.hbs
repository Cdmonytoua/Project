<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Simple login</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/alertmsg.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    {{#if style}}
    <link rel="stylesheet" href="/css/{{style}}">
    {{/if}}
</head>

<body>
    <div id="page-container">
        <div id="content-wrap">
            <!-- all other page content -->
            {{#if user}}
            <div class="form-popup" id="myForm">
                <form class="form-container">
                    <button type="button" class="btn" onclick="window.location='/micuenta'">Mi cuenta</button>
                    <button type="button" class="btn" onclick="window.location='/salir'">Cerrar sessión</button>
                    <button type="button" class="btn cancel" onclick="closeForm()">Cerrar</button>
                </form>
            </div>
            {{else}}
                <div class="form-popup" id="myForm">
                    <form action="/login" class="form-container" method="POST">
                        <h1>Inicia sesión</h1>
                        <label for="username"><b>Username</b></label>
                        <input type="text" placeholder="Nombre de usuario" name="username" required>
                        <label for="password"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" required>
                        <button type="submit" class="btn">Iniciar sesión</button>
                        <button type="button" class="btn" onclick="window.location='/registrar'">Registrarse</button>
                        <button type="button" class="btn cancel" onclick="closeForm()">Cerrar</button>
                    </form>
                </div>
            {{/if}}
            <div class="topnav">
                <a href="/">Inicio</a>
                <a href="#libros">Libros</a>
                <a href="/categorias">Categorías</a>
                <a href="#autores">Autores</a>
                <a href="#editoriales">Editoriales</a>
                <div class="search-container">
                    <form action="/action_page.php">
                        <input type="text" placeholder="Search.." name="search">
                        {{#if user}}
                        <button type="button" onclick="openForm()"><i class="fa fa-user" aria-hidden="true"> Hola,
                                {{user.Username}}</i></button>
                        {{else}}
                        <button type="button" onclick="openForm()"><i class="fa fa-user"
                                aria-hidden="true"></i></button>
                        {{/if}}
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
            {{>error}}
            {{{ body }}}
        </div>
        <footer id="footer">
            <div class="contenedor">
                <p class="copy">Libreria L &copy; 2020</p>
                <div class="sociales">
                    <a href="https://www.facebook.com"><img
                            src="https://cdn.icon-icons.com/icons2/693/PNG/512/Facebook_Rounded_Solid_icon-icons.com_61562.png"
                            alt="enlace-facebook" width="35pt" height="35pt"></a>
                    <a href="https://www.twitter.com"><img src="https://image.flaticon.com/icons/png/512/23/23681.png"
                            alt="enlace-twitter" width="30pt" height="30pt"></a>
                    <a href="https://www.instagram.com"><img src="https://image.flaticon.com/icons/png/512/87/87390.png"
                            alt="enlace-instagram" width="30pt" height="30pt"></a>
                    <a href="https://www.youtube.com"><img src="https://image.flaticon.com/icons/png/512/48/48968.png"
                            alt="enlace-youtube" width="35pt" height="35pt"></a>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous">
        </script>
    <script>
        $(document).ready(function () {
            var url = window.location;
            $('div.topnav a[href="' + url + '"]').addClass('active');
            $('div.topnav a').filter(function () {
                return this.href == url;
            }).addClass('active');
        });
        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }

        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }
    </script>
</body>

</html>