<div class="container">
    <div class="form__top">
        <h2><span>Registrarse</span></h2>
    </div>
    <form class="form__reg" action="/registrar" method="POST">
        <input class="input" name="username" type="text" placeholder="&#128100;  Nombre de usuario" required autofocus>
        <input class="input" name="password" type="password" placeholder="&#128100;  Contraseña" required>
        <input class="input" name="nombre" type="text" placeholder="&#128100;  Nombre" required>
        <input class="input" name="apaterno" type="text" placeholder="&#128100;  Apellido paterno" required>
        <input class="input" name="amaterno" type="text" placeholder="&#128100;  Apellido materno" required>
        <input class="input" name="correo" type="email" placeholder="&#9993;  Correo" required>
        <input class="input" name="dir" type="text" placeholder="&#8962;  Dirección" required>
        <input class="input" name="codigo" type="number" placeholder="&#128100;  Código postal" required>
        <div class="btn__form">
            <input class="btn__submit" type="submit" value="Ok">	
            <input class="btn__reset" type="reset" value="Regresar" onclick="window.location='/login';">	
        </div>
    </form>
</div>