<!-- --- START OF FILE inicio.html --- -->

<div class="inicio-page"> {{!-- Contenedor principal con la clase .inicio-page --}}

  <div class="container mt-0 mt-md-3">
    <!-- El h2 "Librería L" fue removido de aquí para evitar duplicados, ya que hay uno más abajo. -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

      <ul class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
      </ul>

      <div class="carousel-inner">
        {{!-- CAMBIO: Se usan clases en lugar de estilos en línea para mejor mantenimiento --}}
        <div class="carousel-item active">
          <img src="https://porrua.mx/media/catalog/tmp/category/Biografia-e-historias-reales.jpg" class="banner-carousel-img" alt="Biografia e historias reales">
        </div>
        <div class="carousel-item">
          <img src="https://porrua.mx/media/catalog/tmp/category/Consulta.jpg" class="banner-carousel-img" alt="Consulta">
        </div>
        <div class="carousel-item">
          <img src="https://porrua.mx/media/catalog/tmp/category/EstiloVidaDeporteOcio.jpg" class="banner-carousel-img" alt="Estilo de Vida, Deporte y Ocio">
        </div>
        <div class="carousel-item">
          <img src="https://porrua.mx/media/catalog/tmp/category/Ficcion.jpg" class="banner-carousel-img" alt="Ficcion">
        </div>
        <div class="carousel-item">
          <img src="https://porrua.mx/media/catalog/tmp/category/InfantilesJuvenilesDid.jpg" class="banner-carousel-img" alt="Infantiles, Juveniles y Didácticos">
        </div>
        <div class="carousel-item">
          <img src="https://porrua.mx/media/catalog/tmp/category/Literatura.jpg" class="banner-carousel-img" alt="Literatura">
        </div>
      </div>

      <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>
    </div>
  </div>

  <div class="container"> 
    <div class="row">
      <div class="col-md-12">
        <h2>Libros <b>Recientes</b></h2>
        <div id="productCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
          <ol class="carousel-indicators">
            {{#each libros}}
            {{#if @first}}
            <li data-target="#productCarousel" data-slide-to="{{@index}}" class="active"></li>
            {{else}}
            <li data-target="#productCarousel" data-slide-to="{{@index}}"></li>
            {{/if}}
            {{/each}}
          </ol>

          <div class="carousel-inner">
            {{#each libros}}
            <div class="carousel-item {{#if @first}}active{{/if}}">
              <div class="row">
                {{#each this}}
                {{!-- CAMBIO CLAVE: "col-6" para móvil (2 por fila), "col-md-3" para escritorio (4 por fila) --}}
                <div class="col-6 col-md-3 mb-4">
                  <div class="thumb-wrapper">
                    <a href="/libro/{{Id_Libro}}">
                      <div class="img-box">
                        <img src="{{Imagen}}" class="img-fluid" alt="{{Nombre}}">
                      </div>
                    </a>
                    <div class="thumb-content">
                      <h6>{{Nombre}}</h6>
                      <p class="item-price"><span>${{Precio}}</span></p>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
            </div>
            {{/each}}
          </div>
          
          <a class="carousel-control-prev" href="#productCarousel" data-slide="prev">
            <i class="fa fa-angle-left"></i>
          </a>
          <a class="carousel-control-next" href="#productCarousel" data-slide="next">
            <i class="fa fa-angle-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>

</div>