<div class="container" style="margin-top: 2%; margin-bottom: 2%">
    <form action="/admin/libros" method="POST">
        <h2>Agregar <span>libro</span></h2>
        <hr>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="Nombre">
        </div>
        <div class="form-group">
            <label for="categoria">Categoría</label>
            <select id="categoria" class="form-control" name="Categoria">
                <option selected>Selecciona...</option>
                {{#each categorias}}
                <option value="{{Id_Categoria}}"> {{Nombre}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="autor">Autor</label>
            <select id="autor" class="form-control" name="Autor">
                <option selected>Selecciona...</option>
                {{#each autores}}
                <option value="{{Id_Autor}}"> {{Nombre}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="editorial">Editorial</label>
            <select id="editorial" class="form-control" name="Editorial">
                <option selected>Selecciona...</option>
                {{#each editoriales}}
                <option value="{{Id_Editorial}}"> {{Nombre}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="anio">Año</label>
            <input type="number" class="form-control" id="anio" name="Anio">
        </div>
        <div class="form-group">
            <label for="cantidad">Cantidad</label>
            <input type="text" class="form-control" id="cantidad" name="Cantidad">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input type="text" class="form-control" id="precio" name="Precio">
        </div>
        <div class="form-group">
            <label for="imagen">URL portada</label>
            <input type="text" class="form-control" id="imagen" name="Imagen">
        </div>
        <div class="form-check form-check-inline">
            <button type="submit" class="btn btn-primary">Aceptar</button>
        </div>
        <div class="form-check form-check-inline">
            <button type="reset" class="btn btn-danger">Reset</button>
        </div>
    </form>
</div>